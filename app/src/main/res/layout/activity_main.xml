<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagenView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintVertical_bias="0.424" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:text="Contraseña"
        android:textColor="#94979b"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="261dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:text="Usuario"
        android:textColor="#94979b"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagenView"
        app:layout_constraintVertical_bias="0.32" />

    <Button

        android:id="@+id/boton1"
        android:layout_width="233dp"
        android:layout_height="54dp"
        android:layout_marginTop="100dp"

        android:background="#5e17eb"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasena"
        app:layout_constraintVertical_bias="0.0" /> <!-- Para asegurar que el texto sea visible en el fondo violeta -->





</androidx.constraintlayout.widget.ConstraintLayout>